//CGPA Calculator
import javax.swing.*;
import java.awt.*;

public class CGPACalculator {

    public static void main(String[] args) {
        JFrame frame = new JFrame("CGPA Calculator");
        frame.setSize(400, 400);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setLayout(new GridLayout(7, 2, 10, 10));

        JTextField[] marksFields = new JTextField[6];
        for (int i = 0; i < 6; i++) {
            frame.add(new JLabel("Subject " + (i + 1) + " Marks:"));
            marksFields[i] = new JTextField();
            frame.add(marksFields[i]);
        }

        JButton calcButton = new JButton("Calculate CGPA");
        JLabel resultLabel = new JLabel("Your CGPA will appear here");
        calcButton.addActionListener(e -> {
            try {
                float total = 0;
                for (int i = 0; i < 6; i++) {
                    float mark = Float.parseFloat(marksFields[i].getText());
                    total += mark;
                }
                float avg = total / 6;
                float cgpa = avg / 9.5f;

                resultLabel.setText(String.format("Your CGPA is: %.2f", cgpa));
            } catch (NumberFormatException ex) {
                resultLabel.setText("Enter valid numeric marks!");
            }
        });

        frame.add(calcButton);
        frame.add(resultLabel);
        frame.setVisible(true);
    }
}
//Number Guessing Game
import java.util.Scanner;
import java.util.Random;

public class NumberGuessingGame {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Random rand = new Random();

        int numberToGuess = rand.nextInt(100) + 1; // 1 to 100
        int numberOfTries = 0;
        int guess = 0;

        System.out.println("ðŸŽ¯ Welcome to the Number Guessing Game!");
        System.out.println("I'm thinking of a number between 1 and 100. Can you guess it?");

        while (guess != numberToGuess) {
            System.out.print("Enter your guess: ");
            try {
                guess = sc.nextInt();
    		 numberOfTries++;

                if (guess < 1 || guess > 100) {
                    System.out.println(" Please guess between 1 and 100.");
                } else if (guess < numberToGuess) {
                    System.out.println("Too low . Try again.");
                } else if (guess > numberToGuess) {
                    System.out.println("Too high . Try again.");
                } else {
                    System.out.println(" Correct! You guessed the number in " + numberOfTries + " tries.");
                }
            } catch (Exception e) 
			{
                		System.out.println("Invalid input. Please enter a number.");
                		sc.next();             
			}
        }

        sc.close();
    }
}
